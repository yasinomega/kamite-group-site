<%- include('partials/head') %>
<%- include('partials/header') %>

<section class="hero">
    <h1>Nos Départements & Filiales</h1>
    <p>Découvrez l’ensemble des activités stratégiques de Kamite Group.</p>
</section>

<!-- ===================== DÉPARTEMENTS ===================== -->
<section class="services-section">
    <h2>Départements</h2>

    <div class="services-grid">
        <% departments.forEach(function(dep){ %>
            <div class="service-card"
                 data-title="<%= dep.title %>"
                 data-desc="<%= dep.summary %>">
                
                <h3><%= dep.title %></h3>
                <p><%= dep.summary %></p>

                <% if(dep.cta){ %>
                <a href="<%= dep.cta.href %>" class="btn-link"><%= dep.cta.label %></a>
                <% } %>
            </div>
        <% }) %>
    </div>
</section>

<!-- ===================== FILIALES ===================== -->
<section class="services-section">
    <h2>Filiales</h2>

    <div class="services-grid">
        <% filiales.forEach(function(f){ %>
            <div class="service-card"
                 data-title="<%= f.name %>"
                 data-desc="<%= f.desc %>">
                
                <h3><%= f.name %></h3>
                <p><%= f.desc %></p>

                <a href="/filiales/<%= f.id %>" class="btn-link">Voir détail</a>
            </div>
        <% }) %>
    </div>
</section>

<!-- ===================== INSTITUTION ===================== -->
<section class="services-section">
    <h2>Institutionnel</h2>

    <div class="services-grid">

        <a href="/institution/historique" class="service-card">
            <h3>Historique</h3>
            <p>Origines & évolution de Kamite Group.</p>
        </a>

        <a href="/institution/mot-du-fondateur" class="service-card">
            <h3>Mot du Fondateur</h3>
            <p>Vision, valeurs & inspirations.</p>
        </a>

        <a href="/institution/nos-atouts" class="service-card">
            <h3>Nos Atouts</h3>
            <p>Compétences, forces & avantages.</p>
        </a>

        <a href="/institution/perspectives" class="service-card">
            <h3>Perspectives</h3>
            <p>Avenir & développement stratégique.</p>
        </a>

    </div>
</section>

<%- include('partials/footer') %>
